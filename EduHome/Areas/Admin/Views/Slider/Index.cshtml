@model List<Slider>
@{
    ViewData["Title"] = "Slider";
    int count = 1;
    string url = "Slider";
}
<div class="modal-box">
    <div class="inner-box col-4">
        <div class="modal-img-box">
            <img class=" img-fluid inner-img" src="" />
        </div>
        <div class="modal-body text-uppercase"></div>
        <div class="modal-btn">
            <button class="m-2 btn btn-md btn-danger modal-delete">Delete</button>
            <button class="m-2 btn btn-md btn-primary modal-back">Go Back</button>
        </div>
    </div>
</div>
<div class="row">
    <table class="table table-hover">
        <thead>
            <tr class="text-right">
                <th scope="col"><a class="btn btn-md btn-success" asp-controller="Slider" asp-action="Create">Create</a></th>
            </tr>
            <tr class="text-center">
                <th scope="col">#</th>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th style="width:30%" scope="col">Description</th>
            </tr>
        </thead>
        <tbody class="body">
            @foreach (Slider e in Model)
            {
                <tr class="text-center">
                    <td>@count</td>
                    <td class="td-img"><img src="~/img/slider/@e.Image" alt="Alternate Text" /></td>
                    <td>@e.Title</td>
                    <td>@e.Description</td>
                    <td>
                        <a class="btn btn-sm btn-secondary" asp-controller="Slider" asp-action="Detail" asp-route-id="@e.Id">Detail</a>
                        <a class="btn btn-sm btn-primary" asp-controller="Slider" asp-action="Update" asp-route-id="@e.Id">Update</a>
                        @if (Model.Count() > 2)
                        {
                            <button data-delete="@e.Id" data-url="@url" class="btn btn-sm btn-danger delete">Delete</button>
                        }
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
</div>

