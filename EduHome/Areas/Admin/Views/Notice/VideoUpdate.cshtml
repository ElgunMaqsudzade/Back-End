@model VideoTour
@{
    ViewData["Title"] = "Video Update";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="notice-right-wrapper mb-25 pb-25">
                <h3>TAKE A VIDEO TOUR</h3>
                <div style="background-image: url(/img/notice/@Model.Image);" class="notice-video">
                    <div class="video-icon video-hover">
                        <a class="video-popup" href="@Model.VideoLink">
                            <i class="zmdi zmdi-play"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="form-group">
                                    <div class="form-group">
                                        <label asp-for="Photo" class="form-label">Select Image</label>
                                        <input asp-for="Photo" class="form-control" accept="image/*" type="file">
                                        <span class="text-danger" asp-validation-for="Photo"></span>
                                    </div>
                                    <label asp-for="VideoLink">Main Description</label>
                                    <input asp-for="VideoLink" class="form-control" placeholder="Main Description">
                                    <span class="text-danger" asp-validation-for="VideoLink"></span>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <a asp-area="Admin" asp-controller="Notice" asp-action="Index" class="btn btn-light">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}


