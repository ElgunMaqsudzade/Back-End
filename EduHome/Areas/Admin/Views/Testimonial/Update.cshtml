@model TestimonialArea

@{
    ViewData["Title"] = "Edit";
}

<h4>Testimonial</h4>
<hr />
<div class="container">
    <div class="row mb-5">
        <div class="col-md-12">
            <h4>TestimonialArea</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt class="td-img" style="width:300px"><img src="~/img/testimonial/@Model.Image" class="img-fluid" alt="Alternate Text" /></dt>
                <dt>
                    @Html.DisplayNameFor(model => model.Fullname)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Fullname)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>
    </div>
    <div class="row">
        <form class="col-md-12" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Photo" class="form-label">Select Image</label>
                        <input asp-for="Photo" class="form-control" accept="image/*">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Fullname" class="form-label">Fullname</label>
                        <input asp-for="Fullname" class="form-control" placeholder="Title">
                        <span class="text-danger" asp-validation-for="Fullname"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Description">Main Description</label>
                        <input asp-for="Description" class="form-control" placeholder="Main Description">
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a asp-area="Admin" asp-controller="Testimonial" asp-action="Index" class="btn btn-light">Cancel</a>
        </form>
    </div>
</div>


@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}