@model List<BlogSimple>
@{
    int count = (int)ViewBag.Skip + 1;
    string url = "Blog";
}

@foreach (BlogSimple e in Model)
{
    <tr class="text-center">
        <td>@count</td>
        <td class="td-img"><img src="~/img/blog/@e.Image" alt="Alternate Text" /></td>
        <td>@e.Title</td>
        <td>@e.CreateTime</td>
        <td>@e.Author</td>
        <td>
            <a class="btn btn-sm btn-secondary" asp-controller="Blog" asp-action="Detail" asp-route-id="@e.Id">Detail</a>
            <a class="btn btn-sm btn-primary" asp-controller="Blog" asp-action="Update" asp-route-id="@e.Id">Update</a>
            <button data-delete="@e.Id" data-url="@url" class="btn btn-sm btn-danger delete">Delete</button>
        </td>
    </tr>
    count++;
}
