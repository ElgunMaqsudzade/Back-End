@model List<EventSimple>
@{
    int count = (int)ViewBag.Skip + 1;
    string url = "Event";
}

@foreach (EventSimple e in Model)
{
    <tr class="text-center">
        <td>@count</td>
        <td class="td-img"><img src="~/img/event/@e.Image" alt="Alternate Text" /></td>
        <td>@e.Title</td>
        <td>@e.StartingTime</td>
        <td>@e.EndingTime</td>
        <td>@e.Location</td>
        <td>
            <a class="btn btn-sm btn-secondary" asp-controller="Event" asp-action="Detail" asp-route-id="@e.Id">Detail</a>
            <a class="btn btn-sm btn-primary" asp-controller="Event" asp-action="Update" asp-route-id="@e.Id">Update</a>
            <button data-delete="@e.Id" data-url="@url" class="btn btn-sm btn-danger delete">Delete</button>
        </td>
    </tr>
    count++;
}
