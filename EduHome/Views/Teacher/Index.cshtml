
@{
    ViewData["Title"] = "Teacher";
}
<!-- Banner Area Start -->
@await Component.InvokeAsync("Banner", new { word = "our teachers" })
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search blogs</h3>
                </div>
                <div class="course-form">
                    <form id="search" method="post">
                        <input type="text" placeholder="Search..." id="search-inp" name="search" autocomplete="off" />
                        <button type="submit">search</button>
                        <input type="hidden" id="mycont" value="/Teacher/" />
                    </form>
                </div>
                <div class="ul-holder">
                    <ul class="search-ul"></ul>
                </div>
            </div>
        </div>
        <div class="row">
            @await Component.InvokeAsync("Teacher", new { page = Model, take = 8 })
        </div>
        @await Component.InvokeAsync("Pagination", new { item = "teacher", take = 8, hasFilter = (bool)ViewBag.hasFilter, page = Model })
    </div>
</div>
<!-- Teacher End -->