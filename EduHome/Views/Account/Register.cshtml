@model RegisterVM
@{
    Layout = "_Layout";
}

<!-- Banner Area Start -->
@await Component.InvokeAsync("Banner", new { word = "Register" })
<!-- Banner Area End -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <h5>Please login using account detail bellow.</h5>
                            <div asp-validation-summary="ModelOnly" style="color: #EC1C23 !important" class=" jrc-val"></div>

                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div class="jrc-form">
                                    <input asp-for="Fullname" placeholder="Name">
                                    <span asp-validation-for="Fullname"></span>
                                </div>
                                <div class="jrc-form">
                                    <input asp-for="Username" placeholder="Username">
                                    <span asp-validation-for="Username"></span>
                                </div>
                                <div class="jrc-form">
                                    <input asp-for="Email" placeholder="Email">
                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div class="jrc-form">
                                    <input asp-for="Password" placeholder="Password">
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="jrc-form">
                                    <input asp-for="CheckPassword" placeholder="CheckPassword">
                                    <span asp-validation-for="CheckPassword"></span>
                                </div>
                                <div class="button-box">
                                    <button type="submit" class="default-btn">sign up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>