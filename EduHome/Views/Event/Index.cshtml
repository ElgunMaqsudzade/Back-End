
@{
    ViewData["Title"] = "Event";
}
<!-- Banner Area Start -->
@await Component.InvokeAsync("Banner", new { word = "event" })
<!-- Banner Area End -->
<!-- Event Start -->
<div class="blog-area event-area three text-center pt-150 pb-90">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 text-left">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form">
                    <form id="search" action="#">
                        <input type="search" placeholder="Search..." name="search" />
                        <button type="submit">search</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            @await Component.InvokeAsync("Event", new { take = 6, category = (string)TempData["CategoryName"] })
        </div>
        @await Component.InvokeAsync("Pagination", new { item = "event", take = 6 })
    </div>
</div>
<!-- Event End -->