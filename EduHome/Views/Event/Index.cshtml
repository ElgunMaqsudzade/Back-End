
@{
    ViewData["Title"] = "Event";
}
<!-- Banner Area Start -->
@await Component.InvokeAsync("Banner", new { word = "event" })
<!-- Banner Area End -->
<!-- Event Start -->
<div class="blog-area event-area three text-center pt-150 pb-90">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search blogs</h3>
                </div>
                <div class="course-form">
                    <form id="search" method="post">
                        <input type="text" placeholder="Search..." id="search-inp" name="search" autocomplete="off" />
                        <button type="submit">search</button>
                        <input type="hidden" id="mycont" value="/Event/" />
                    </form>
                </div>
                <div class="ul-holder">
                    <ul class="search-ul"></ul>
                </div>
            </div>
        </div>
        <div class="row">
            @await Component.InvokeAsync("Event", new { take = 6, category = (string)ViewBag.CategoryName, page = Model })
        </div>
        @await Component.InvokeAsync("Pagination", new { item = "event", take = 6, isTrue = (bool)ViewBag.IsTrue, page = Model })
    </div>
</div>
<!-- Event End -->