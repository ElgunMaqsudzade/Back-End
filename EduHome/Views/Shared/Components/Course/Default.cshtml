@model List<CourseSimple>
@{
    Layout = null;
}

@foreach (CourseSimple c in Model)
{
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-course mb-70">
            <div class="course-img">
                <a asp-controller="Course" asp-action="Detail" asp-route-id="@c.Id">
                    <img src="img/course/@c.Image" alt="course">
                    <div class="course-hover">
                        <i class="fa fa-link"></i>
                    </div>
                </a>
            </div>
            <div class="course-content">
                <h3><a asp-controller="Course" asp-action="Detail" asp-route-id="@c.Id">@c.Title</a></h3>
                <p>@((c.MainContent.Length < 130)? c.MainContent:c.MainContent.Substring(0,130) + "...")</p>
                <a class="default-btn" asp-controller="Course" asp-action="Detail" asp-route-id="@c.Id">read more</a>
            </div>
        </div>
    </div>
}
