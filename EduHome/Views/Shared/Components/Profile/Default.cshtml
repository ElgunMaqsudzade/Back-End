@model AppUser

<li class="nav-item nav-profile dropdown">
    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" id="profileDropdown">
        <img style="object-fit:cover;" src="~/img/user/@Model.Image" alt="profile" />
        <span class="nav-profile-name">@Model.Fullname</span>
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
        <a asp-area="default" asp-controller="Account" asp-action="Profile" class="dropdown-item">
            <i class="mdi mdi-account-box-outline text-primary"></i>
            Settings
        </a>
        <a asp-area="default" asp-controller="Home" asp-action="Index" class="dropdown-item">
            <i class="mdi mdi-home text-primary"></i>
            Home
        </a>
        <a asp-area="default" asp-controller="Account" asp-action="Logout" class="dropdown-item">
            <i class="mdi mdi-logout text-primary"></i>
            Logout
        </a>
    </div>
</li>
