@model List<TeacherSimple>

@foreach (TeacherSimple tec in Model)
{
    <div class="col-md-3 col-sm-4 col-xs-12">
        <div class="single-teacher">
            <div class="single-teacher-img">
                <a asp-controller="Teacher" asp-action="Detail"><img src="~/img/teacher/@tec.Image" alt="teacher"></a>
            </div>
            <div class="single-teacher-content text-center">
                <h2><a asp-controller="Teacher" asp-action="Detail">@tec.Fullname</a></h2>
                <h4>@tec.Profession</h4>
                <ul>
                    @foreach (var soc in tec.SocialMedias)
                    {
                        <li><a href="@soc.Link">@Html.Raw(soc.Icon)</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
}