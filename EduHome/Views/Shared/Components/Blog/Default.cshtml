@model List<BlogSimple>


@foreach (BlogSimple blog in Model)
{
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-blog">
            <div class="blog-img">
                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id"><img class="img-fluid" src="~/img/blog/@blog.Image" alt="blog"></a>
                <div class="blog-hover">
                    <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id"><i class="fa fa-link"></i></a>
                </div>
            </div>
            <div class="blog-content">
                <div class="blog-top">
                    <p>By @blog.Author  /  @blog.CreateTime.Day, @blog.CreateTime.ToString("MMMM") @blog.CreateTime.Year /  <i class='fa fa-comments-o'></i> 4</p>
                </div>
                <div class="blog-bottom">
                    <h2><a asp-controller="Blog" asp-action="Detail"  asp-route-id="@blog.Id">@blog.Title</a></h2>
                    <a asp-controller="Blog" asp-action="Detail"  asp-route-id="@blog.Id" >read more</a>
                </div>
            </div>
        </div>
    </div>
}
