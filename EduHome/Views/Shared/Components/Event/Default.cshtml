@model List<EventSimple>
@{
    Layout = null;
}

@foreach (EventSimple e in Model)
{
    <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="single-event mb-60">
            <div class="event-img">
                <a asp-controller="Event" asp-action="Detail" asp-route-id="@e.Id">
                    <img src="img/event/@e.Image" alt="event">
                    <div class="course-hover">
                        <i class="fa fa-link"></i>
                    </div>
                </a>
                <div class="event-date">
                    <h3>@e.StartingTime.Day <span>@e.StartingTime.ToString("MMM")</span></h3>
                </div>
            </div>
            <div class="event-content text-left">
                <h4><a asp-controller="Event" asp-action="Detail" asp-route-id="@e.Id">@e.Title</a></h4>
                <ul>
                    <li><span>time:</span> @e.StartingTime.ToString("hh.mm tt") - @e.EndingTime.ToString("hh.mm tt")</li>
                    <li><span>venue</span> @e.Location</li>
                </ul>
                <div class="event-content-right">
                    <a class="default-btn" asp-controller="Event" asp-action="Detail" asp-route-id="@e.Id">join now</a>
                </div>
            </div>
        </div>
    </div>

}
