
@{
    ViewData["Title"] = "Blog";
}
<!-- Banner Area Start -->
@await Component.InvokeAsync("Banner", new { word = "blog" })
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            @await Component.InvokeAsync("Blog", new { take = 9 })
        </div>
        @await Component.InvokeAsync("Pagination", new { item = "blog", take = 6 })
    </div>
</div>
<!-- Blog End -->