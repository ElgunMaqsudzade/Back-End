
@{
    ViewData["Title"] = "Course";
}
<!-- Banner Area Start -->
@await Component.InvokeAsync("Banner", new { word = "courses" })
<!-- Banner Area End -->
<!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search blogs</h3>
                </div>
                <div class="course-form">
                    <form id="search" method="post">
                        <input type="text" placeholder="Search..." id="search-inp" name="search" autocomplete="off" />
                        <button type="submit">search</button>
                        <input type="hidden" id="mycont" value="/Course/" />
                    </form>
                </div>
                <div class="ul-holder">
                    <ul class="search-ul"></ul>
                </div>
            </div>
        </div>
        <div class="row">
            @await Component.InvokeAsync("Course", new { category = (string)ViewBag.CategoryName, page = Model ,take = 6 })
        </div>
        @await Component.InvokeAsync("Pagination", new { item = "course", take = 6, isTrue = (bool)ViewBag.IsTrue, page = Model })
    </div>
</div>
<!-- Course End -->